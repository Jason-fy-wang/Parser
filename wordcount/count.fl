%{
#include<stdio.h>
int chars = 0;
int words = 0;
int lines = 0;

%}

%option noyywrap 


%%

[a-zA-Z]+   {words++; chars += strlen(yytext);}
\n      {chars++; lines++;}
.       {chars++;}

%%


int main(int argc, char* argv[]) {
    // read from file
    if(argc == 2) {
        yyin = fopen(argv[1], "r");
    }
    yylex();
    printf("lines=%d, words=%d, chars=%d\n", lines,words,chars);
    return 0;
}


